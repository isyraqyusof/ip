<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="400.0" minWidth="450.0"
            prefHeight="700.0" prefWidth="500.0" stylesheets="@../css/main.css"
            xmlns="http://javafx.com/javafx/22.0.4" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cookie.ui.MainWindow">
    <children>
        <!-- Chat area with optimized scrolling -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER"
                    prefHeight="640.0" prefWidth="500.0" vvalue="1.0"
                    AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="60.0">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="480.0" spacing="8.0"
                      styleClass="dialog-container">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>

        <!-- Input area with responsive design -->
        <HBox spacing="8.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
              AnchorPane.rightAnchor="10.0">
            <children>
                <TextField fx:id="userInput" onAction="#handleUserInput"
                           promptText="Type your message here..."
                           HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
                <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleUserInput"
                        text="Send" minWidth="70.0" />
            </children>
            <padding>
                <Insets />
            </padding>
        </HBox>
    </children>
</AnchorPane>